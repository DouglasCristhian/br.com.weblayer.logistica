<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="110dp"
      android:id="@+id/txtRelativeLayout1">
    
    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="NOME_TRANSPORTADORA"
         android:textSize="19sp"
         android:focusable="false"
         android:id="@+id/txtNomeTransportadora"
         
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/txtFrete"
         android:text="FRETE"
         android:textSize="19sp"
         android:focusable="false"
         
         android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/txtFreteImposto"
         android:text="FRETE_IMPOSTO"
         android:textSize="18sp"
         android:focusable="false"
         android:layout_below="@+id/txtCliente"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />
  </RelativeLayout>
</LinearLayout>