<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_weight="0.05"
        android:id="@+id/txtRelativeLayout1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/txtCliente"
            android:text="NOME_CLIENTE"
            android:textSize="19sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/txtSerie"
            android:text="SERIE"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/txtNumNota"
            android:layout_toEndOf="@+id/txtNumNota"
            android:layout_marginLeft="101dp"
            android:layout_marginStart="101dp"
            android:layout_below="@+id/txtCliente"
            android:layout_alignBottom="@+id/txtNumNota" />

        <TextView
          android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/txtNumNota"
            android:text="NUM_NOTA"
            android:textSize="18sp"
            android:layout_below="@+id/txtCliente"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="VALOR"
            android:textSize="17sp"
            android:id="@+id/txtValor"
            android:layout_below="@+id/txtNumNota"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>