<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minWidth="25px"
      android:minHeight="25px">

    <TextView
      android:text="Introdução"
      android:layout_marginLeft="18dip"
      android:layout_marginTop="18dip"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/Introducao"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
       android:text="Utilizando o App"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="20dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/UtilizandoApp"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
       
    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:background="@drawable/TelaLogin"/>

    <TextView
      android:text="@string/UtilizandoApp2"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/Menu"/>

    <ImageView
      android:layout_marginTop="20dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/MenuSobreAjuda"/>

    <TextView
     android:text="Informar Entrega"
     android:layout_marginLeft="18dip"
     android:layout_marginTop="18dip"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/InformarEntrega"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/BuscarNota"/>


    <TextView
      android:text="@string/InformarEntrega2"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="20dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/InformarEntrega"/>

    <TextView
     android:text="Performance do Transportador"
     android:layout_marginLeft="18dip"
     android:layout_marginTop="18dip"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/Performance"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="20dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/Performance"/>

    <TextView
     android:text="Cenário de Entrega"
     android:layout_marginLeft="18dip"
     android:layout_marginTop="18dip"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/CenarioEntrega"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="20dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/CenarioEntrega"/>


    <TextView
     android:text="Simular Frete"
     android:layout_marginLeft="18dip"
     android:layout_marginTop="18dip"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/SimularFrete"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="20dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/SimulacaoFrete2"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/InformarCidade"/>    

  </LinearLayout>
</ScrollView>